    <servlet-class>ers.servlets.FrontControllerServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>
